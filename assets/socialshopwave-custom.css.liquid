#widget-fave-html {
  width: 100%;
  margin-bottom: 11px;
  margin-top: -48px;
}

#widget-fave-html .ssw-fave-btn {
  width: 100%; 
}

#widget-fave-html .ssw-fave-btn-content {
  width: 100%;
  font-family: "Open Sans", sans-serif;
  font-size: 14px;
  border-radius: 0;
  color: #fff;
  border-color: #151515;
  background-color: #151515;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 500;
  line-height: 42.8px; 
}

#widget-fave-html .ssw-fave-btn-content i {
  color: #fff;
}

#widget-fave-html .ssw-fave-btn-counter,
#widget-fave-html .ssw-fave-btn-counter:before {
  font-size: 14px;
  border-radius: 0;
  color: #fff;
  border-color: #151515;
  background-color: #151515;
}

#widget-fave-html:hover .ssw-fave-btn-content,
#widget-fave-html:hover .ssw-fave-btn-counter,
#widget-fave-html:hover .ssw-fave-btn-counter:before {
  background: #d4af37;
  border-color: #d4af37;
  color: #fff;
}

@media screen and (min-width: 798px) {
  #widget-fave-html { 
    max-width: 400px;
  }
}

#ssw-reward-popup-birthday-content .ssw-reward-birthday .ssw-reward-birthday-btn {
  padding: 17px 13px 26px;
}